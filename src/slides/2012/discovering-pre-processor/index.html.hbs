<section>
	<h2>Nesting</h2>
	<pre><code class="language-sass">.parent {
property: value;

.child {
property: value
}
}</code></pre>

<pre><code class="language-css">.parent { property: value }
.parent .child { property: value }</code></pre>
</section>

<section>
	<h2>Parent selector</h2>
	<pre><code class="language-sass">.class {
&:hover { }
.modernizr-class & {}
}</code></pre>

<pre><code class="language-css">.class { }
.class:hover { }
.modernizr-class .class { }</code></pre>
</section>

<section>
	<h2>Media bubbling</h2>
	<pre><code class="language-sass">$widthGap: 600px; // variable !
.sidebar {
@media (min-width: $widthGap) {
float: left;

background: url(image.png);
@media (min-resolution: 2ddpx) {
background: url(image@2x.png);
}
}
}</code></pre>
</section>

<section>
	<h2>@extend</h2>
	<pre><code class="language-sass">.button { }
.button-delete {}</code></pre>

<pre><code class="language-markup">&lt;a class="button button-delete"&gt;...</code></pre>
</section>

<section>
	<h2>@extend + %placeholder : c'est d'la bomb'</h2>
	<pre><code class="language-sass">%button { }
.button-info { @extend %button }
.button-delete { @extend %button }
.button-valid { @extend %button }
}</code></pre>

<pre><code class="language-markup">&lt;a class="button-XXXX"&gt;...</code></pre>

<pre><code class="language-css">.button-info,  .button-delete,  .button-valid { }
.button-info { }
.button-delete { }
.button-valid { }
</code></pre>

</section>

